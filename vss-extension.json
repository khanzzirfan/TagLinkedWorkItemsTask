{
  "manifestVersion": 1,
  "id": "work-items-tagging-task-ex-v2",
  "version": "1.0.4",
  "name": "Tag Release Work Items-Modal-V1",
  "publisher": "irfankhan",
  "description": "Automatically add specified tag to all work items associated with build or release. V1 is an extended version of the original task. it inclues filtering of workitems by regex",
  "categories": ["Azure Pipelines"],
  "links": {
    "repository": {
      "uri": "https://github.com/khanzzirfan/TagLinkedWorkItemsTask"
    },
    "issues": {
      "uri": "https://github.com/khanzzirfan/TagLinkedWorkItemsTask/issues"
    }
  },
  "icons": {
    "default": "images/logo.png"
  },
  "public": true,
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "tags": ["Release", "Build", "Work item tagging"],
  "content": {
    "details": {
      "path": "extension.md"
    }
  },
  "branding": {
    "color": "#f97923",
    "theme": "dark"
  },
  "files": [
    {
      "path": "TagLinkedWorkItems/dist",
      "packagePath": "TagLinkedWorkItems/dist"
    },
    {
      "path": "TagLinkedWorkItems/node_modules",
      "packagePath": "TagLinkedWorkItems/node_modules"
    },
    {
      "path": "TagLinkedWorkItems/icon.png",
      "packagePath": "TagLinkedWorkItems/icon.png"
    },
    {
      "path": "TagLinkedWorkItems/task.json",
      "packagePath": "TagLinkedWorkItems/task.json"
    }
  ],
  "contributions": [
    {
      "id": "work-items-tagging-task-ex-v1",
      "type": "ms.vss-distributed-task.task",
      "targets": ["ms.vss-distributed-task.tasks"],
      "properties": {
        "name": "TagLinkedWorkItems"
      }
    }
  ]
}
